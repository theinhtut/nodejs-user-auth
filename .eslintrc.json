{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "quotes": ["error", "single"],
    "no-unused-vars": "warn",
    "space-infix-ops": ["warn", { "int32Hint": false }]
  }
}
